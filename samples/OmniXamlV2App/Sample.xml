<?xml version="1.0" encoding="utf-8"?>

<local:MyCustomWindow xmlns:local="using:AvaloniaApp;assembly=AvaloniaApp" xmlns="https://github.com/avaloniaui"
                      xmlns:x="special" Width="600" Height="400" Title="{Binding Path=Title}"
                      PointerPressed="OnPointerPressed"> 
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <StackPanel>
      <Menu>
        <MenuItem Header="Archivo" Items="{Binding Items}" />
      </Menu>
      <Button x:Name="MyButton" Content="{Binding Path=Title}" />
      <Button>
        <Button.Content>
          <Binding Path="#MyButton.Content" />
        </Button.Content>
      </Button>

      <HtmlLabel>
        <HtmlLabel.Text>
          <![CDATA[
          <CENTER>
            <H1>A Simple Sample Web Page</H1>         
              <IMG SRC="http://sheldonbrown.com/images/scb_eagle_contact.jpeg">                      
              <H4>By Sheldon Brown</H4>
            <H2>Demonstrating a few HTML features</H2>
          </CENTER>            
          ]]>
        </HtmlLabel.Text>
      </HtmlLabel>

      <Image Source="Mario.png" />

    </StackPanel>
    <ListBox Grid.Row="1" Items="{Binding Path=Items}">
      <ListBoxItem>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Source="mario.png"  />
          <TextBox Grid.Column="1">It's-a me!</TextBox>
        </Grid>
      </ListBoxItem>
      <ListBoxItem>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114"/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>
          <Image Source="mario.png"  />
          <TextBox Grid.Column="1" Text="It's-a me!">           
          </TextBox>
        </Grid>
      </ListBoxItem>

      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid ColumnDefinitions="Auto,*">
            <CheckBox />
            <Button Grid.Column="1" Content="{Binding}" />
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>

</local:MyCustomWindow>